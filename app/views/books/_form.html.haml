= form_for @book, html: { class: "form form-horizontal book" } do |f|
  .form-group
    = f.label :name, class: 'control-label'
    .controls
      = f.text_field :name, class: 'form-control', required: true
    = error_span(@book[:name])
  .form-group
    = f.label :image, class: 'control-label'
    .controls
      = f.text_field :image, class: 'form-control', required: true
    = error_span(@book[:image])
  .form-group
    = f.label :timeStamp, class: 'control-label'
    .controls
      = f.text_field :timeStamp, class: 'form-control', required: true
    = error_span(@book[:timeStamp])
  .form-group
    = f.label :author, class: 'control-label'
    .controls
      = f.text_area :author, class: 'form-control', rows: 5, required: true
    = error_span(@book[:author])
  .form-group
    = f.label :description, class: 'control-label'
    .controls
      = f.text_area :description, class: 'form-control', rows: 7, required: true
    = error_span(@book[:description])
  .form-group
    = f.label :ebook_state, class: 'control-label'
    .controls
      = f.text_field :ebook_state, class: 'form-control', required: true
    = error_span(@book[:ebook_state])
  .checkbox
    = f.label :isNewEbooks, class: 'control-label' do
      = f.check_box :isNewEbooks, required: true
      isNewEbooks
    = error_span(@book[:isNewEbooks])
  .checkbox
    = f.label :stateLike, class: 'control-label' do
      = f.check_box :stateLike, required: true
      stateLike
    = error_span(@book[:stateLike])
  .checkbox
    = f.label :isVip do
      = f.check_box :isVip, required: true
      isVip
    = error_span(@book[:isVip])
  .form-group
    = f.label :urlDownload, class: 'control-label'
    .controls
      = f.text_field :urlDownload, class: 'form-control', required: true
    = error_span(@book[:urlDownload])
  .form-group
    = f.label :urlSaveLocal, class: 'control-label'
    .controls
      = f.text_field :urlSaveLocal, class: 'form-control', required: true
    = error_span(@book[:urlSaveLocal])
  .form-group
    = f.label :content, class: 'control-label'
    .controls
      = f.text_area :content, class: 'form-control', rows: 15, required: true
    = error_span(@book[:content])
  .checkbox
    = f.label :confirmed, class: 'control-label' do
      = f.check_box :confirmed, required: true
      Confirmed
    = error_span(@book[:confirmed])
  %br/
  %hr/

  = f.submit nil,class: 'btn btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), books_path, :class => 'btn btn-default'
