- model_class = Url
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:href) + ':'
  %br
  = @url.href
%p
  %strong= model_class.human_attribute_name(:fetchable) + ':'
  %br
  = @url.fetchable


= link_to t('.back', :default => t("helpers.links.back")), urls_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_url_path(@url), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), url_path(@url), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
