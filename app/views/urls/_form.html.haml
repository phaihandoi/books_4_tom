= form_for @url do |f|
  - if @url.errors.any?
    #error_explanation
      %h2= "#{pluralize(@url.errors.count, "error")} prohibited this url from being saved:"
      %ul
        - @url.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :href
    = f.text_field :href
  .field
    = f.label :status
    = f.text_field :status
  .actions
    = f.submit 'Save'
